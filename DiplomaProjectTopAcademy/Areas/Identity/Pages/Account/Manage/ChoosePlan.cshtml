@page
@model ChoosePlanModel
@{
    ViewData["Title"] = "Choose Subscription Plan";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Choose Your Subscription Plan</h2>

    <form method="post" class="w-50 mx-auto">
        <div class="form-check mb-3">
            <input class="form-check-input" type="radio" name="plan" id="monthlyPlan" value="Monthly" checked>
            <label class="form-check-label fw-bold" for="monthlyPlan">
                Monthly — 1 month access
            </label>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="radio" name="plan" id="yearlyPlan" value="Yearly">
            <label class="form-check-label fw-bold" for="yearlyPlan">
                Yearly — 12 months access
            </label>
        </div>

        <div class="form-check mb-4">
            <input class="form-check-input" type="radio" name="plan" id="testPlan" value="Test">
            <label class="form-check-label fw-bold" for="testPlan">
                Test — 1 minute demo
            </label>
        </div>

        <input type="hidden" asp-for="Plan" />
        <input type="hidden" asp-for="Mode" />

        <button type="submit" class="btn btn-secondary btn-lg w-100">
            <i class="fas fa-credit-card me-2"></i> PAY (stub)
        </button>
    </form>

    <div class="alert alert-info mt-4 text-center fw-bold">
        В будущем здесь будет интеграция с платёжным API.<br />
        Сейчас это заглушка: выбранный план просто фиксируется.
    </div>
</div>
