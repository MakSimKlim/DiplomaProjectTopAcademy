@page
@model DiplomaProjectTopAcademy.Areas.Identity.Pages.Account.Manage.SubscriptionModel
@using DiplomaProjectTopAcademy.Models

@{
    ViewData["Title"] = "Subscription";
    ViewData["ActivePage"] = ManageNavPages.Subscription;
    var appUser = Model.AppUser;
}

<h2 class="mb-4">My Subscription</h2>

@if (appUser != null)
{
    <div class="form-floating mb-3">
        <input class="form-control rounded bg-white"
               value="@(appUser.SubscriptionType ?? "No plan")" readonly />
        <label><strong>Current Plan</strong></label>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control rounded bg-white"
               value="@(appUser.SubscriptionStartDate?.ToString("dd.MM.yyyy HH:mm:ss") ?? "—")" readonly />
        <label><strong>Start Date</strong></label>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control rounded bg-white"
               value="@(appUser.SubscriptionEndDate?.ToString("dd.MM.yyyy HH:mm:ss") ?? "—")" readonly />
        <label><strong>End Date</strong></label>
    </div>

    <div class="form-floating mb-3">
        <input class="form-control rounded bg-white"
               value="@(appUser.IsActive ? "Active ✅" : "Inactive ❌")" readonly />
        <label><strong>Status</strong></label>
    </div>

    @if (appUser.SubscriptionEndDate != null)
    {
        <div class="alert alert-success fw-bold mb-3 rounded">
            <strong>Time left:</strong> <span id="subscriptionCountdown"></span>
        </div>
    }

    <div class="mt-3">
        @if (appUser.IsActive && appUser.SubscriptionEndDate > DateTime.UtcNow)
        {
            <form method="post" asp-page-handler="Extend">
                <button type="submit" name="plan" value="@appUser.SubscriptionType"
                        class="btn btn-success w-100 rounded">
                    Renew subscription
                </button>
            </form>
        }
        else
        {
            <form method="post" asp-page-handler="Choose">
                <select name="plan" class="form-select mb-2">
                    <option value="Monthly">Monthly</option>
                    <option value="Yearly">Yearly</option>
                    <option value="Test">Test (1 min)</option>
                </select>
                <button type="submit" class="btn btn-warning w-100 rounded">
                    Select new plan
                </button>
            </form>
        }
    </div>
}
else
{
    <div class="alert alert-warning rounded">User not found</div>
}

@section Scripts {
    <script>
        var endDateString = "@(appUser?.SubscriptionEndDate?.ToString("yyyy-MM-ddTHH:mm:ss"))";
        if (endDateString && endDateString.length > 0) {
            var endDate = new Date(endDateString);

            function updateSubscriptionCountdown() {
                var now = new Date();
                var diff = endDate - now;

                if (diff <= 0) {
                    document.getElementById("subscriptionCountdown").innerHTML = "Subscription expired!";
                    return;
                }

                var days = Math.floor(diff / (1000 * 60 * 60 * 24));
                var hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
                var minutes = Math.floor((diff / 1000 / 60) % 60);
                var seconds = Math.floor((diff / 1000) % 60);

                document.getElementById("subscriptionCountdown").innerHTML =
                    days + " d " + hours + " h " + minutes + " m " + seconds + " s";
            }

            setInterval(updateSubscriptionCountdown, 1000);
            updateSubscriptionCountdown();
        }
    </script>
}
