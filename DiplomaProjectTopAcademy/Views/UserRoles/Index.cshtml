@using DiplomaProjectTopAcademy.Models
@model List<DiplomaProjectTopAcademy.Models.UserRolesViewModel>
@{
    ViewData["Title"] = "User Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>User Roles</h1>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles.ToList())</td>
                <td>
                    <!--Button "Manage User" is active for SuperAdmin only-->
                    <a class="btn btn-primary @(User.IsInRole("SuperAdmin") ? "" : "disabled")"
                    asp-controller="UserRoles" 
                    asp-action="Manage" 
                    asp-route-userId="@user.UserId"                    
                    >Manage Roles</a>

                </td>
            </tr>
        }
    </tbody>
</table>
