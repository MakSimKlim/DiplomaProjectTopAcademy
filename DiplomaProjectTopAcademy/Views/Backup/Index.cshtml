@model List<DiplomaProjectTopAcademy.Models.BackupViewModel>

@{
    ViewData["Title"] = "Database Backups";
}

<h2 class="mb-4">Manage Database Backups</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form asp-action="SetBackupFrequency" method="post" class="mb-3">
    <label for="frequency">Backup Frequency:</label>
        <select id="frequency" name="frequency" class="form-select w-auto d-inline">
            <option value="EveryMinute" selected="@(ViewBag.BackupFrequency == "EveryMinute")">Every Minute (Test)</option>
            <option value="Hourly" selected="@(ViewBag.BackupFrequency == "Hourly")">Hourly</option>
            <option value="Daily" selected="@(ViewBag.BackupFrequency == "Daily")">Daily (Default)</option>
            <option value="Weekly" selected="@(ViewBag.BackupFrequency == "Weekly")">Weekly</option>
            <option value="Disabled" selected="@(ViewBag.BackupFrequency == "Disabled")">Disabled</option>
        </select>
    <button type="submit" class="btn btn-info ms-2">Save Frequency</button>
</form>

<p>Current frequency: <strong>@ViewBag.BackupFrequency</strong></p>

<form asp-action="CreateBackup" method="post" class="mb-3">
    <button type="submit" class="btn btn-primary">Create Backup Now</button>
</form>

@if (ViewBag.BackupFrequency == "Disabled")
{
    <div class="alert alert-danger fw-bold mb-3 rounded">
        Backups are not being performed.
    </div>
}
else
{
    <div class="alert alert-info fw-bold mb-3 rounded">
        <strong>Next backup in:</strong> <span id="backupCountdown"></span>
        <br />
        <small>(UTC: @(((DateTime)ViewBag.NextBackupUtc).ToString("yyyy-MM-dd HH:mm:ss")))</small>
    </div>
}


<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>File Name</th>
            <th>Created At</th>
            <th>Size (KB)</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var backup in Model)
        {
            <tr>
                <td>@backup.FileName</td>
                <td>@backup.CreatedAt.ToUniversalTime().ToString("dd.MM.yyyy HH:mm") UTC</td>
                <td>@backup.SizeKb</td>
                <td>@backup.Location</td>
                <td>
                    <a asp-action="Download" asp-route-fileName="@backup.FileName" class="btn btn-success">
                        Download
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="CleanupOldBackups" method="post" class="mb-3">
    <input type="number" name="keepLast" value="10" class="form-control d-inline w-auto me-2" />
    <button type="submit" class="btn btn-warning">Cleanup Old Backups</button>
</form>


@section Scripts {
    <script>
        var nextBackupString = "@(ViewBag.NextBackupUtc?.ToUniversalTime().ToString("yyyy-MM-ddTHH:mm:ssZ"))";
        var countdownEl = document.getElementById("backupCountdown");

        if (nextBackupString && countdownEl) {
            var nextBackupDate = new Date(nextBackupString);

            function updateBackupCountdown() {
                var nowUtc = new Date(); // JS хранит время в UTC внутри объекта
                var diff = nextBackupDate.getTime() - nowUtc.getTime();


                if (diff <= 0) {
                    countdownEl.innerHTML = "Backup created";
                    return;
                }

                var days = Math.floor(diff / (1000 * 60 * 60 * 24));
                var hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
                var minutes = Math.floor((diff / (1000 * 60)) % 60);
                var seconds = Math.floor((diff / 1000) % 60);

                countdownEl.innerHTML =
                    days + " d " + hours + " h " + minutes + " m " + seconds + " s";
            }

            updateBackupCountdown();
            setInterval(updateBackupCountdown, 1000);
        }
    </script>
}