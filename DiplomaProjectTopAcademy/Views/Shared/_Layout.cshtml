<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DiplomaProjectTopAcademy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DiplomaProjectTopAcademy.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- Блокировка для неактивных пользователей -->
    <!-- дополнительно настроены стили css в wwwroot/css/site.css -->
    @if (User.IsInRole("Inactive"))
    {
        <div class="inactive-overlay">
            <div class="inactive-message alert alert-danger">
                <h4>Ваш аккаунт деактивирован</h4>
                <p>Доступ к системе ограничен. Обратитесь к администратору.</p>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                    <button type="submit" class="btn btn-sm btn-light">Выйти из системы</button>
                </form>
            </div>
        </div>
    }
    <!---------------------------------------------->

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DiplomaProjectTopAcademy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HowItWorks">How It Works</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Slabs" asp-action="Index">Slabs</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ArmatureRods" asp-action="Index">ArmatureRods</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Concretes" asp-action="Index">Concretes</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Floors" asp-action="Index">Floors</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="Index">Projects</a>
                        </li>
                        <!-- Buttons for SuperAdmin&Admin only-->
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="RoleManager" asp-action="Index">Role Manager</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="UserRoles" asp-action="Index">User Roles</a>
                            </li>
                        }
                        <!---------------------------------------------->

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <!--<div class="container">-->
    <div class="container @(User.IsInRole("Inactive") ? "inactive-user" : "")">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.ToString("yyyy") - Max Klimov's IT Studio (MKITS) created - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* <!-- Блокировка для неактивных пользователей --> *@
    @* @if (User.IsInRole("Inactive")) *@
    @* { *@
    @* <script> *@
    @* // Дополнительная блокировка на случай, если CSS не сработал *@
    @* document.addEventListener('DOMContentLoaded', function () { *@
    @* document.querySelectorAll('a, button, input, [href]').forEach(el => { *@
    @* el.addEventListener('click', function (e) { *@
    @* e.preventDefault(); *@
    @* e.stopPropagation(); *@
    @* return false; *@
    @* }); *@
    @* }); *@
    @* }); *@
    @* </script> *@
    @* } *@
    @* <!----------------------------------------------> *@

    @await RenderSectionAsync("Scripts", required: false)
   
</body>
</html>
