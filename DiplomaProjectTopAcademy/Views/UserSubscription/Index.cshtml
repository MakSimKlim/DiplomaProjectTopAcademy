@model List<DiplomaProjectTopAcademy.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage User Subscriptions";
}

<h2 class="mb-4">Manage User Subscriptions</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Username</th>
            <th>Current Plan</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Subscription status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@(user.SubscriptionType ?? "—")</td>
                <td>@(user.SubscriptionStartDate?.ToString("dd.MM.yyyy HH:mm") ?? "—")</td>
                <td>@(user.SubscriptionEndDate?.ToString("dd.MM.yyyy HH:mm") ?? "—")</td>
                <td>@(user.IsActive ? "Active ✅" : "Inactive ❌")</td>
                <td>
                    <form asp-action="SetSubscription" method="post" class="d-flex flex-column">
                        <input type="hidden" name="userId" value="@user.Id" />

                        <select name="plan" class="form-select mb-2">
                            <option>-- Select plan --</option>
                            <option value="Monthly">Monthly</option>
                            <option value="Yearly">Yearly</option>
                            <option value="Test">Test (1 min)</option>
                            <option value="Inactive">Inactive</option>
                        </select>

                        @* <input type="datetime-local" name="endDate" class="form-control mb-2" /> *@

                        <button type="submit" class="btn btn-primary">Apply</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
